<Page x:Class="CourseProject.Views.UsersPages.AccountantPages.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseProject.Views.UsersPages.AccountantPages"
      mc:Ignorable="d" 
      d:DesignHeight="380" d:DesignWidth="635"
      Title="StatisticsPage">

    <Grid Background ="#FF7F7F7F">
        <TextBox  Name ="InfoTextBlock" VerticalScrollBarVisibility="Auto"  HorizontalAlignment="Left" IsReadOnly="True" TextAlignment="Left" Height="245" Margin="10,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="615" FontFamily="Times New Roman" FontSize="18" FontStyle="Normal" Foreground="White" Background="{x:Null}"/>
        <Button x:Name="PriceListButton" Content="Price List" HorizontalAlignment="Center" Height="50" Margin="10,310,435,0" VerticalAlignment="Top" Width="190" Foreground="White" FontFamily="Times New Roman" FontSize="24" Background="Orange" Click="PriceListButton_Click"/>
        <Button x:Name="RentalAccountingButton" Content="Rental Accounting" HorizontalAlignment="Center" Height="50" Margin="225,310,220,0" VerticalAlignment="Top" Width="190" Foreground="White" FontFamily="Times New Roman" FontSize="24" Background="Orange" Click="RentalAccountingButton_Click"/>
        <Label Content="Statistic" HorizontalAlignment="Center" Height="50" Margin="215,0,210.2,0" VerticalAlignment="Top" Width="210" FontFamily="Times New Roman" FontSize="30" FontStyle="Normal" HorizontalContentAlignment="Center"  Background="#00000000" Foreground="White"/>
        <Button x:Name="StatisticsButton" Content="Statistics" HorizontalAlignment="Center" Height="50" Margin="435,310,10,0" VerticalAlignment="Top" Width="190" Foreground="White" FontFamily="Times New Roman" FontSize="24" Background="Orange" Click="StatisticsButton_Click"/>
    </Grid>
</Page>
