        <Label Content="Reports for:" HorizontalAlignment="Center" Height="50" Margin="215,0,210.2,0" VerticalAlignment="Top" Width="210" FontFamily="Times New Roman" FontSize="30" FontStyle="Normal" HorizontalContentAlignment="Center"  Background="#00000000" Foreground="White"/>
        <Button x:Name="StatisticsButton" Content="Statistics" HorizontalAlignment="Center" Height="50" Margin="215,234,220,0" VerticalAlignment="Top" Width="200" Foreground="White" FontFamily="Times New Roman" FontSize="24" Background="Orange" Click="StatisticsButton_Click"/>
    </Grid>
</Page>
